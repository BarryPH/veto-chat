<!DOCTYPE html>

<html>
<head>
	<% include layoutHead.ejs %>

	<title>Chatroom | Veto Chat</title>
	<link rel="stylesheet" href="/css/chatRoom.css">
</head>
<body>
	<div id='siteHeader'>
		<div id='logo'>
			Veto Chat
		</div

		><div id='headerBody'>
			<header>
				Room:
				<span id='roomName'></span>
			</header>
			<button id='changeRoomNameButton'>Vote Change</button>
		</div>
	</div>

	<div id='siteBody'>
		<div id='sidebar'>
			<div class='sidebarItem'>
				<header>Occupants <span id='occupantCount'>()</span></header>
				<div id='occupantList'>
					<form id='usernameForm' class='occupant'>
						<input type='text' placeholder='User' name='username'>
						<button>Change Name</button>
					</form>
				</div>
			</div>

			<div class='sidebarItem'>
				<header>Votes</header>
				<div id='votes'>
				</div>
			</div>
		</div

		><div id='chat'>
			<div id='messages'>
				<div class='serverMessage'>Say something!</div>
			</div>

			<form id='chatForm' action=''>
				<input id='messageInput' tabindex='1' autocomplete='off' maxlength='1000'><button>Say</button>
			</form>
		</div>
	</div>


	<script>
		var roomInfo = {
			roomId: <%- JSON.stringify(roomId) %>,
			roomName: <%- JSON.stringify(roomName) %>
		};
	</script>

	<script src='/socket.io/socket.io.js'></script>
	<script src='/js/chatRoom.js'></script>
	<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css'>
	<script src='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js'></script>
</body>
